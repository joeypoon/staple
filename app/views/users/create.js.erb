<% if @user.errors.any? %>

  $('#modal .modal-body').html('<%= j render 'users/new_user_form' %>');

<% else %>

  $('#modal').modal('hide');
  $('nav').html('<%= j render 'layouts/nav' %>');
  $('.main-alert').html('<%= j render 'layouts/alerts' %>');
  $('body #content').html('<%= j render 'posts/show_posts' %>');

<% end %>
