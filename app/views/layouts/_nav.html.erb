<div class="container">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to 'Staple', root_path, class: 'navbar-brand' %>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="navbar-collapse">
    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
        <li id='me-edit-link' title="User Profile">
          <%= link_to me_edit_path, remote: true do %>
            <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
          <% end %>
        </li>
        <li title="My Posts">
          <%= link_to my_posts_path, remote: true do %>
            <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
          <% end %>
        </li>
        <li title="Stapled Posts">
          <%= link_to my_stapled_path, remote: true do %>
            <span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span>
          <% end %>
        </li>
        <li title="New Staple">
          <%= link_to new_staple_path, remote: true do %>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          <% end %>
        </li>
        <li title="Logout">
          <%= link_to logout_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>
          <% end %>
        </li>
      <% else %>
        <li><%= link_to 'Sign Up', new_user_path, remote: true %></li>
        <li><%= link_to 'Login', login_path, remote: true %></li>
      <% end %>
      <li>
        <%= simple_form_for(:search, url: search_path, method: :get, remote: true, html: { class: 'navbar-form navbar-left' }) do |f| %>
          <div class="form-group">
            <%= f.input_field :search_word, class: 'form-control' %>
          </div>
          <%= f.button :button, class: 'btn btn-default' do %>
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
          <% end %>
        <% end %>
      </li>
    </ul>
  </div><!-- /.navbar-collapse -->
</div><!-- /.container-fluid -->
