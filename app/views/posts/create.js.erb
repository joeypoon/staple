  $('#new-staple-form').modal('hide');

  $("#new-staple-form .modal-body").html('<%= j render 'posts/new_staple_form' %>');

  $('#post-list').html("<%= j render 'posts/show_posts' %>");

<% else %>

  $("#new-staple-form .modal-body").html('<%= j render 'posts/new_staple_form' %>');

<% end %>
