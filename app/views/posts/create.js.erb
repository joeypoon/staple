<% if @post.errors.none? %>

  $('#modal').modal('hide');

  $("#modal .modal-body").html('<%= j render 'posts/new_staple_form' %>');

  $('#paginate-posts').html('<%= j render 'posts/paginate_posts' %>');

  $('body #content').html("<%= j render 'posts/show_posts' %>");

<% else %>

  $("#modal .modal-body").html('<%= j render 'posts/new_staple_form' %>');

<% end %>
