<% if current_user %>
  <% unless current_user.liked.include? post.id %>
    <%= link_to like_post_path(post_id: post.id), remote: true, method: :post do %>
      <button class="btn btn-success"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span> <%= post.likes %></button>
    <% end %>
  <% else %>
    <%= link_to unlike_post_path(post_id: post.id), remote: true, method: :post do %>
      <button class="btn btn-danger"><span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span> <%= post.likes %></button>
    <% end %>
  <% end %>
<% end %>
