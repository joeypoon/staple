<%= simple_form_for(@post, url: staples_path, remote: true) do |f| %>

  <%= f.input :url, label: 'Link' %>
  <%= f.input :photo, class: 'form-group', input_html: { class: 'form-control' } %>
  <%= f.input :notes, input_html: { rows: 7 } %>
  <%= f.submit 'Staple It', class: 'btn btn-primary btn-block' %>

<% end %>
